{
  "name": "dom-shield",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/dom-shield.cjs.js",
  "module": "./dist/dom-shield.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/dom-shield.es.js",
      "require": "./dist/dom-shield.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "demo:build": "pnpm build && cp dist/dom-shield.umd.js demo/",
    "demo:docker": "./deploy.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "@vitest/ui": "2.1.8",
    "jsdom": "25.0.1",
    "typescript": "~5.8.3",
    "vite": "npm:rolldown-vite@7.1.12",
    "vitest": "2.1.8"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.12"
    }
  }
}
